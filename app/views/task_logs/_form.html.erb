<%= form_for(@task_log) do |f| %>
  <% if @task_log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task_log.errors.count, "error") %> prohibited this task_log from being saved:</h2>
      <ul>
      <% @task_log.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <%= f.label :client %><br>
  <%= f.collection_select :client_id, Employment.where(staff_id: current_user.meta.id), :client_id, :get_client_name, {prompt: 'Select A Client'} %>
  </div>

  <div class="field">
    <%= f.label :task_title %><br>
    <%= f.text_field :task_title %>
  </div>
  <div class="field">
    <%= f.label :starting_time %><br>
    <%= f.time_select :starting_time,  {ampm: true} %>
  </div>
  <div class="field">
    <%= f.label :ending_time %><br>
    <%= f.time_select :ending_time,  {ampm: true}%>
  </div>
  <%= f.hidden_field :staff_id, :value => current_user.meta.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>