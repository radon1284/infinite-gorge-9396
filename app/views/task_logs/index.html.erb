<% provide(:title, 'Task Log Calendar') %><% content_for :body_class, 'theme-default main-menu-animated' %><% content_for :main_wrapper, 'main-wrapper' %><div id="content-wrapper"><% if current_user.role == 'team_leader' %><div class="panel panel-dark panel-light-green">  <div class="panel-heading"><span class="panel-title">Unapprove Task Logs</span><div class="panel-heading-controls"><%= will_paginate @task_logs_unapprove, renderer: BootstrapPagination::Rails %></div></div>     <table class="table table-bordered">    <thead class="cf">      <tr>        <th>Task Code</th>        <th>Client</th>        <th>Staff</th>        <th>Work Time Today</th>        <th colspan="4"></th>      </tr>    </thead>      <tbody>        <% @task_logs_unapprove.each do |task_log| %>                    <tr>              <td data-title="Name"><strong><%= task_log.task_code %></strong></td>              <td data-title="Name"><strong><%= task_log.client_name %></strong></td>              <td data-title="Name"><strong><%= task_log.staff_name %></strong></td>              <td data-title="Name"><strong><%= task_log.sum_of_hrs %></strong></td>              <td data-title="Name"><strong><%= link_to 'View', task_log %></strong></td>              <td data-title="Name"><strong><%= link_to 'Edit', edit_task_log_path(task_log) %></strong></td>              <td data-title="Name"><strong><%= link_to ' Unapproved', complete_task_log_path(task_log), method: :patch %></strong></td>              <td data-title="Name"><strong><%= link_to 'Delete', task_log, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>                  </tr>                      <% end %>              </tbody>    </table>    </div><div class="panel">  <div class="panel-heading"> <span class="panel-title">Approve Task Logs</span> <div class="panel-heading-controls"><%= will_paginate @task_logs_approve, renderer: BootstrapPagination::Rails %></div></div>    <table class="table table-bordered">      <thead>        <tr>        <th>Task Code</th>        <th>Client</th>        <th>Staff</th>        <th>Work Time Today</th>        <th colspan="4"></th>      </tr>      </thead>      <tbody>      <% @task_logs_approve.each do |task_log| %>                <% if task_log.completed? %>          <tr>            <td data-title="Name" class="text-light-gray"><span class"text-light-gray"><%= task_log.task_code %></span></td>                <td data-title="Name" class="text-light-gray"><%= task_log.client.full_name %></td>                <td data-title="Name" class="text-light-gray"><%= task_log.staff.full_name %></td>                <td data-title="Name" class="text-light-gray"><%= task_log.sum_of_hrs %></td>                <td data-title="Name" class="text-light-gray">View</td>                <td data-title="Name" class="text-light-gray">Edit</td>                <td data-title="Name" class="text-light-gray">Approved</td>                <td data-title="Name" class="text-light-gray">Delete</td>           </tr>          <% end %>                 <% end %>      </tbody>    </table></div><% elsif current_user.role == 'staff' %><div class="row">  <div class="col-xs-4">     <!-- Centered text -->    <div class="stat-panel text-center">      <div class="stat-row">         <!-- Dark gray background, small padding, extra small text, semibold text -->        <div class="stat-cell bg-success padding-sm text-xs text-semibold"> <i class="fa fa-globe"></i>TODAY </div>      </div>      <!-- /.stat-row -->      <div class="stat-row">         <!-- Bordered, without top border, without horizontal padding -->        <div class="stat-cell col-xs-4 padding-sm no-padding-hr">                      <div class="text-bg"><p class="text-seccess"><strong><%= @total_worked_daily %></strong></p></div>                              </div>      </div>      <!-- /.stat-row -->     </div>    <!-- /.stat-panel -->   </div>  <div class="col-xs-4">    <div class="stat-panel text-center">      <div class="stat-row">         <!-- Dark gray background, small padding, extra small text, semibold text -->        <div class="stat-cell bg-success padding-sm text-xs text-semibold"> <i class="fa fa-flash"></i>THIS WEEK </div>      </div>      <!-- /.stat-row -->      <div class="stat-row">         <!-- Bordered, without top border, without horizontal padding -->        <div class="stat-cell col-xs-4 padding-sm no-padding-hr">                      <div class="text-bg"><p class="text-seccess"><strong><%= @total_worked_this_week %></strong></p></div>                              </div>      </div>      <!-- /.stat-row -->     </div>    <!-- /.stat-panel -->   </div>  <div class="col-xs-4">    <div class="stat-panel text-center">      <div class="stat-row">         <!-- Dark gray background, small padding, extra small text, semibold text -->        <div class="stat-cell bg-success padding-sm text-xs text-semibold"> <i class="fa fa-cloud"></i>THIS MONTH </div>      </div>      <!-- /.stat-row -->      <div class="stat-row">         <!-- Bordered, without top border, without horizontal padding -->        <div class="stat-cell col-xs-4 padding-sm no-padding-hr">                      <div class="text-bg"><p class="text-seccess"><strong><%= @total_worked_this_month %></strong></p></div>                              </div>      </div>      <!-- /.stat-row -->     </div>    <!-- /.stat-panel -->   </div></div><div class="panel panel-dark panel-light-green">  <div class="panel-heading"><span class="panel-title">Unapprove Task Logs</span><div class="panel-heading-controls"><%= will_paginate @task_logs_unapprove, renderer: BootstrapPagination::Rails %></div></div>     <table class="table table-bordered">    <thead class="cf">      <tr>        <th>Task Code</th>        <th>Task Title</th>        <th>Task Description</th>        <th>Client</th>        <th>Work Time Today</th>        <th colspan="3"></th>      </tr>    </thead>      <tbody>        <% @task_logs_unapprove.each do |task_log| %>          <% if task_log.user == current_user %>                    <tr>              <td data-title="Name"><strong><%= task_log.task_code %></strong></td>              <td data-title="Name"><strong><%= task_log.task_title %></strong></td>              <td data-title="Name"><strong><%= truncate task_log.task_description.html_safe, length: 160 %></strong></td>              <td data-title="Name"><strong><%= task_log.client.full_name %></strong></td>              <td data-title="Name"><strong><%= task_log.sum_of_hrs %></strong></td>              <td data-title="Name"><strong><%= link_to 'View', task_log %></strong></td>              <td data-title="Name"><strong><%= link_to 'Edit', edit_task_log_path(task_log) %></strong></td>              <td data-title="Name"><strong><%= link_to 'Delete', task_log, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>                  </tr>            <% end %>          <% end %>              </tbody>    </table>    </div><div class="panel">  <div class="panel-heading"> <span class="panel-title">Approve Task Logs</span> <div class="panel-heading-controls"><%= will_paginate @task_logs_approve, renderer: BootstrapPagination::Rails %></div></div>    <table class="table table-bordered">      <thead>        <tr>        <th>Task Code</th>        <th>Task Title</th>        <th>Client</th>        <th>Work Time Today</th>        <th></th>      </tr>      </thead>      <tbody>      <% @task_logs_approve.each do |task_log| %>         <% if task_log.completed? %>        <% if task_log.user == current_user %>          <tr>            <td data-title="Name" class="text-light-gray"><%= task_log.task_code %></td>                <td data-title="Name" class="text-light-gray"><%= task_log.task_title %></td>                <td data-title="Name" class="text-light-gray"><%= task_log.client.full_name %></td>                <td data-title="Name" class="text-light-gray"><%= task_log.sum_of_hrs %></td>                <td data-title="Name" class="text-light-gray">Approved</td>          </tr>          <% end %>          <% end %>        <% end %>      </tbody>    </table></div><% else %><div class="alert alert-danger">          <button data-dismiss="alert" class="close" type="button">Ã—</button>          <strong>Sorry!</strong> You Dont Have Permission To View This Page.        </div>  </div>  <% end %></div>