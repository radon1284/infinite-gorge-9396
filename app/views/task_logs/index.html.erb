<% provide(:title, 'Task Log Calendar') %><% content_for :body_class, 'theme-default main-menu-animated' %><% content_for :main_wrapper, 'main-wrapper' %><div id="content-wrapper"><% if current_user.role == 'team_leader' %><div class="panel panel-dark panel-light-green">  <div class="panel-heading"><span class="panel-title">My Task Logs</span></div>     <table class="table table-bordered">    <thead class="cf">      <tr>        <th>Task id</th>        <th>Client</th>        <th>Staff</th>        <th>Work Time Today</th>        <th colspan="4"></th>      </tr>    </thead>      <tbody>        <% @task_logs.each do |task_log| %>        <% if current_user.role == 'team_leader' %>        <tr>          <td data-title="Name">#<%= task_log.id %></td>          <td data-title="Name"><%= task_log.client.full_name %></td>          <td data-title="Name"><%= task_log.staff.full_name %></td>          <td data-title="Name"><%= task_log.sum_of_hrs %></td>          <td data-title="Name"><%= link_to 'Show', task_log %></td>          <td data-title="Name"><%= link_to 'Edit', edit_task_log_path(task_log) %></td>          <td data-title="Name"><%= link_to ' Approved', task_log %></td>          <td data-title="Name"><%= link_to 'Destroy', task_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>          <% end %>        </tr>        <% end %>      </tbody>    </table>    <% elsif current_user.role == 'staff' %>        <div class="panel">          <div class="panel-heading"> <span class="panel-title">Task List</span> </div>          <table class="table table-bordered">            <tbody>                          <tr>                <td colspan="2" class="panel-padding">                  <div class="list-group">                    <% @task_logs.each do |task_log| %>                                              <% if task_log.user == current_user %>                          <div class="list-group-item">                          <h4 class="list-group-item-heading"><span class="text-info"><%= task_log.task_title %></span> <span class="text-danger">(<%= task_log.task_code %>)</span></h4>                          <p class="list-group-item-text"><%= truncate task_log.task_description.html_safe, length: 160 %></p><%= link_to 'View', task_log, class: 'label label-success ticket-label' %> <%= link_to 'Edit', edit_task_log_path(task_log), class: 'label label-info ticket-label' %>                          </div>                        <% end %>                                          <% end %>                  </div>                </td>              </tr>            </tbody>          </table>        </div><% else %><div class="alert alert-danger">          <button data-dismiss="alert" class="close" type="button">Ã—</button>          <strong>Sorry!</strong> You Dont Have Permission To View This Page.        </div>  </div>  <% end %></div>