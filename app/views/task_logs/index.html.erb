<p id="notice"><%= notice %></p>

<h1>Listing Task Logs</h1>

<table>
  <thead>
    <tr>
      <th>Task title</th>
      <th>Starting time</th>
      <th>Ending time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_logs.each do |task_log| %>
      <tr>
        <td><%= task_log.task_title %></td>
        <td><%= task_log.starting_time %></td>
        <td><%= task_log.ending_time %></td>
        <td><%= link_to 'Show', task_log %></td>
        <td><%= link_to 'Edit', edit_task_log_path(task_log) %></td>
        <td><%= link_to 'Destroy', task_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

