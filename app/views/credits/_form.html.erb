<div class="panel form-horizontal">
<%= form_for([@client, @client.credits.build]) do |f| %>
<div class="panel-body">
	<div class="row form-group">
		<%= f.text_field :credits, placeholder: :credits, class: "form-control" %>
	</div>
	<div class="row form-group">
		<%= f.collection_select :staff_id, Employment.where(client_id: current_user.meta.id), :staff_id, :get_staff_name, {prompt: 'Select A Staff'}, :class => 'form-control form-group-margin' %>
	</div>
	<div class="row form-group">				
		<%= f.submit "Add Credits", class: "btn btn-default" %>
	</div>
<% end %>
</div>
